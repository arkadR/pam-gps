<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.pam.gps.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_login_navigation"
            app:destination="@id/login_navigation" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pam.gps.ui.login.LoginFragment"
        android:label="Log in"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/navigation_trip"
        android:name="com.pam.gps.ui.currentTrip.CurrentTripFragment"
        android:label="@string/title_trip"
        tools:layout="@layout/fragment_current_trip" />
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.pam.gps.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <navigation
        android:id="@+id/login_navigation"
        android:label="loginFlow"
        app:startDestination="@id/login_fragment">
        <fragment
            android:id="@+id/login_fragment"
            android:name="com.pam.gps.ui.login.LoginFragment"
            android:label="@string/title_sign_in"
            tools:layout="@layout/fragment_login" />
    </navigation>
</navigation>