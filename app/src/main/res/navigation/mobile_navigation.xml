<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.pam.gps.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_tripFragment"
            app:destination="@id/navigation_trip_details" />
    </fragment>
    <fragment
        android:id="@+id/navigation_trip"
        android:name="com.pam.gps.ui.currentTrip.CurrentTripFragment"
        android:label="@string/title_trip"
        tools:layout="@layout/fragment_current_trip">
        <action
            android:id="@+id/action_navigation_trip_to_navigation_login"
            app:destination="@id/navigation_login"
            app:popUpTo="@id/mobile_navigation" />
    </fragment>
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.pam.gps.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navigation_login"
        android:name="com.pam.gps.ui.sign_in.SignInFragment"
        android:label="@string/title_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_navigation_home_to_navigation_login"
        app:destination="@id/navigation_login"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/navigation_trip_details"
        android:name="com.pam.gps.ui.trip.TripFragment"
        android:label="fragment_trip"
        tools:layout="@layout/fragment_trip">
        <argument
            android:name="trip"
            app:argType="com.pam.gps.model.Trip" />
    </fragment>

</navigation>